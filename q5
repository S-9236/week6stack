// 5. Program to convert infix to postfix and prefix
#include <stdio.h>
#include <ctype.h>
#include <string.h>
#define MAX 100
char stack[MAX];
int top = -1;
void push(char c) { stack[++top] = c; }
char pop() { return stack[top--]; }
int precedence(char c) {
    if (c == '^') return 3;
    if (c == '*' || c == '/') return 2;
    if (c == '+' || c == '-') return 1;
    return 0;
}
void infixToPostfix(char *exp) {
    char postfix[MAX];
    int k = 0;
    for (int i = 0; exp[i]; i++) {
        if (isalnum(exp[i]))
            postfix[k++] = exp[i];
        else if (exp[i] == '(')
            push(exp[i]);
        else if (exp[i] == ')') {
            while (top != -1 && stack[top] != '(')
                postfix[k++] = pop();
            pop();
        } else {
            while (top != -1 && precedence(stack[top]) >= precedence(exp[i]))
                postfix[k++] = pop();
            push(exp[i]);
        }
    }
    while (top != -1)
        postfix[k++] = pop();
    postfix[k] = '\0';
    printf("Postfix: %s\n", postfix);
}
void reverse(char *exp) {
    int len = strlen(exp);
    for (int i = 0; i < len / 2; i++) {
        char temp = exp[i];
        exp[i] = exp[len - i - 1];
        exp[len - i - 1] = temp;
    }
}
void infixToPrefix(char *exp) {
    reverse(exp);
    for (int i = 0; exp[i]; i++) {
        if (exp[i] == '(') exp[i] = ')';
        else if (exp[i] == ')') exp[i] = '(';
    }
    char postfix[MAX];
    top = -1;
    int k = 0;
    for (int i = 0; exp[i]; i++) {
        if (isalnum(exp[i]))
            postfix[k++] = exp[i];
        else if (exp[i] == '(')
            push(exp[i]);
        else if (exp[i] == ')') {
            while (top != -1 && stack[top] != '(')
                postfix[k++] = pop();
            pop();
        } else {
            while (top != -1 && precedence(stack[top]) >= precedence(exp[i]))
                postfix[k++] = pop();
            push(exp[i]);
        }
    }
    while (top != -1)
        postfix[k++] = pop();
    postfix[k] = '\0';
    reverse(postfix);
    printf("Prefix: %s\n", postfix);
}
int main() {
    char exp[MAX];
    printf("Enter infix expression: ");
    gets(exp);
    infixToPostfix(exp);
    infixToPrefix(exp);
    return 0;
}
